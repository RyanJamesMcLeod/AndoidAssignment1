<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.assignment1.MainActivity" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/niagara_falls"
        android:src="@drawable/niagara_falls" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:contentDescription="@string/stanley_park"
        android:src="@drawable/stanley_park" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/mt_fuji"
        android:src="@drawable/mt_fuji" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/cn_tower"
        android:src="@drawable/cn_tower" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/imageView2"
        android:text="@string/mt_fuji"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="49dp"
        android:layout_toRightOf="@+id/imageView2"
        android:text="@string/cn_tower"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/stanley_park"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_marginBottom="22dp"
        android:layout_toRightOf="@+id/imageView2"
        android:text="@string/niagara_falls"
        android:textSize="@dimen/font_size" />

</RelativeLayout>